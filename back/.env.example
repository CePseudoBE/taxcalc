# ===========================================
# Back-Taxes Backend Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/backtaxes
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your-database-password

# Google OAuth2 Client ID (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Security (set to true in production!)
APP_SECURITY_ENABLED=true
# Force HTTPS (set to true in production with SSL termination!)
APP_SECURITY_REQUIRE_HTTPS=false

# Token expiration in hours (default: 24)
APP_TOKEN_EXPIRATION_HOURS=24

# CORS - Allowed origins (comma-separated)
# For production, replace with your actual frontend URL
APP_CORS_ALLOWED_ORIGINS=https://calctax.be,https://www.calctax.be

# Redis (optional - for distributed rate limiting in production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
